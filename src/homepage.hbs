<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Magento</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1">
    <link href="css/swiper.min.css" rel="stylesheet" type="text/css">
    <link href="css/main.css" rel="stylesheet" type="text/css">
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <script src="js/jquery-1.12.4.min.js"></script>
    <script src="js/swiper.min.js"></script>
    <script src="js/app.js" defer></script>
  <head>

  <body>
    {{> notification }}
    {{> header }}
    {{> menu }}

    <main>
      <section class="wrapper clear">
        <nav class="sitebar homepage left">
          {{> sitebar-menu }}
        </nav>
        <div class="content right">
          {{> homepage-slider }}
        </div>
      </section>

      <section class="wrapper">
        {{> advertising-services }}
      </section>

      <section class="wrapper">
        <div class="ads clear">
          <div class="left accessories">
            <img src="img/homepage/accessories.png" alt="" />
          </div>
          <div class="right">
            <div class="women">
              <img src="img/homepage/women.png" alt="" />
            </div>
            <div class="tea-cup">
              <img src="img/homepage/tea-cup.png" alt="" />
            </div>
          </div>
        </div>
      </section>

      <section class="current-offers-section">
        <div class="wrapper">
          <div class="current-offers">
            <div class="tags-wrapper clear">
              <div class="text left">Aktuelle Angebote!</div>
              <div class="tags clear right">
                <div class="tag left active">Tee Sorten</div>
                <div class="tag left">Tee Zubehör</div>
                <div class="tag left">Bio Produkte</div>
                <div class="tag left">Allerlei Süßes</div>
                <div class="tag left checked">Nur jetzt!</div>
              </div>
            </div>
            <div class="offers">
              <div class="offer">
                <img src="img/homepage/current-offers/main-offer.jpg" class="picture h100p" alt="" />
              </div>
              <div class="offer">
                <span class="discount">-5<i class="fa fa-euro"></i></span>
                <img src="img/homepage/current-offers/offer-01.jpg" class="picture" alt="" />
                <div class="category">Tee Sorten</div>
                <div class="title">Tee-Name Xyz 123 <span>(100 g)</span></div>
                <div class="rating">
            			<span>☆</span>
                  <span>☆</span>
                  <span>☆</span>
                  <span>☆</span>
                  <span>☆</span>
            		</div>
                <div class="price-wrapper">
                  <span class="new">15.00 <i class="fa fa-euro"></i></span> inkl. MwSt. <span class="old">20.00 <i class="fa fa-euro"></i></span>
                </div>
              </div>
              <div class="offer">
                <span class="discount">-10<i class="fa fa-euro"></i></span>
                <img src="img/homepage/current-offers/offer-02.jpg" class="picture" alt="" />
                <div class="category">Tee Sorten</div>
                <div class="title">Tee-Name Xyz 123 <span>(150 g)</span></div>
                <div class="rating">
            			<span>☆</span>
                  <span>☆</span>
                  <span>☆</span>
                  <span>☆</span>
                  <span>☆</span>
            		</div>
                <div class="price-wrapper">
                  <span class="new">15.00 <i class="fa fa-euro"></i></span> inkl. MwSt. <span class="old">25.00 <i class="fa fa-euro"></i></span>
                </div>
              </div>
              <div class="offer">
                <span class="discount">-4<i class="fa fa-euro"></i></span>
                <img src="img/homepage/current-offers/offer-03.jpg" class="picture" alt="" />
                <div class="category">Tee Sorten</div>
                <div class="title">Tee-Name Xyz 123 <span>(100 g)</span></div>
                <div class="rating">
            			<span>☆</span>
                  <span>☆</span>
                  <span>☆</span>
                  <span>☆</span>
                  <span>☆</span>
            		</div>
                <div class="price-wrapper">
                  <span class="new">12.00 <i class="fa fa-euro"></i></span> inkl. MwSt. <span class="old">16.00 <i class="fa fa-euro"></i></span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

    </main>

    {{> footer }}
  </body>
</html>
